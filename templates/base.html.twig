<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Sites de reservation de Baby Shower">
        <meta name="keywords" content="Baby Shower prestation de service">
        <meta name="author" content="emmanuel de sousa">

        
        <title>PRETTY BABY{% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
         
        {% block stylesheets %}{% endblock %}
    
    </head>


    <body>
        <header class="container-fluid" id="header">
            <div class="row">
                <nav class="col-sm-12 col-md-12 col-lg-12 text-center" id="nav">
                    <a class="btn p-5" href="{{ path('home') }}#realisations">NOS REALISATIONS</a>
                    <a class="btn p-5" href="{{ path('home') }}#offres">NOS OFFRES</a>
                    <a href="{{ path('home') }}"><img class="logo" src="{{ asset('logo/logo.png') }}" alt="logo du site"></a>
                    <a class="btn p-5" href="{{ path('contact') }}">NOUS CONTACTER</a>
                       
                        {% if is_granted('ROLE_USER') %}
                            <a class="btn p-5" href="{{ path('user') }}">PROFIL</a>
                        {% else %}
                            <a class="btn p-5" href="{{ path('app_login') }}">CONNEXION</a> 
                        {% endif %}
                   
                </nav>
            </div> 
            <a href="#header">
                <img class="fleche" src="{{ asset('icons/fleche.png') }}" alt="fleche">
            </a>
        </header>

        <main class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-lg-12" id="content">
                    <div class="row p-5">
                        {% for label, messages in app.flashes %} 
                            {% for message in messages %}
                                <div class="col-3"></div>
                                <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-5 rounded text-center col-6">
                                    {{ message }}
                                </div>
                                <div class="col-3"></div>
                            {% endfor %}
                        {% endfor %}
                       {% block body %}{% endblock %}
                    </div>
                </div>

            </div>
        </main>

        <footer class="container-fluid" id="footer">
            <div class="row">
                <div class="row">
                    <div class="col-4" id= "apropos">
                        <h4>A propos</h4>
                        <a href="ml.html">mentions legales</a></br>
                        <a href="dp.html">données personnelles</a></br>
                        <a href="cookies.html">cookies</a></br>
                        {% if is_granted ('ROLE_ADMIN') %}
                        <a href="{{ path('admin') }}">admin</a>
                        {% endif %}
                    </div>
                    <div class="col-4 text-center">
                        <a href="mailto:info@prettybaby.com">info@prettybaby.com</a>
                    </div>
                    <div class="col-4">
                        <h2>
                            suivez nous:
                            <a href="https://www.facebook.com"><i class="fab fa-facebook"></i></a>
                            <a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a>
                        </h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <p>Copyright © 2022 - Emmanuel De sousa</p>
                    </div>
               </div> 
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ ('js/script.js')}}"></script>

         {% block javascripts %}{% endblock %}
        
        
    </body>
</html>
