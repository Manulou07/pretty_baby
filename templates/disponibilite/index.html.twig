{% extends 'baseAdmin.html.twig' %}

{% block title %} - Disponibilités{% endblock %}

{% block body %}

<section class="container">
      <h2>LISTING DES DATES</h2>
   
      <table class="table text-center table-hover table-sm">
        <thead>
            <tr>
                <th>DATE</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            {% for dispo in dispos %}
                <tr>
                    <td class="align-middle">{{ dispo.dateDispo|date('d/m/Y') }}</td>
                    <td class="align-middle">
                        {% if dispo.isBook == 0 %}
                            Date disponible 
                        {% else %}
                            Réservé
                        {% endif %}
                    </td>
                    <td class="align-middle">
                        <a href="{{ path('dispo_update',{'id': dispo.id}) }}" class="btn btn-primary m-2">Modifier</a>
                        <a href="{{ path('dispo_delete',{'id': dispo.id}) }}" class="btn btn-danger m-2" onclick=" return confirm('Etes vous sure?')">Suprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Dispos passées</h2>

    <table class="table text-center table-hover table-sm">
        <thead>
            <tr>
                <th>DATE</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            {% for dispo in dispoPast %}
                <tr>
                    <td class="align-middle">{{ dispo.dateDispo|date('d/m/Y') }}</td>
                    <td class="align-middle">
                        {% if dispo.isBook == 0 %}
                            Date disponible 
                        {% else %}
                            Réservé
                        {% endif %}
                    </td>
                    <td class="align-middle">
                        <a href="{{ path('dispo_update',{'id': dispo.id}) }}" class="btn btn-primary m-2">Modifier</a>
                        <a href="{{ path('dispo_delete',{'id': dispo.id}) }}" class="btn btn-danger m-2">Suprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-end my-5">
        <a href="{{ path('dispo_create') }}" class="btn btn-success ">Ajouter des dates</a>
    </div>
<section class="container">
{% endblock %}