{% extends 'base.html.twig' %}

{% block title %} - inscriptions{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <section class="container-fluid" id="reservation">
        <div class="row">
            <div class="col-12">
                <h2>INSCRIPTION</h2>
            </div>
            <div class="col-5 p-5">
                <div>
                    <a href="{{ path('home') }}">
                    <img class="logocontact" src="{{ asset('logo/logo.png') }}" alt="logo du site">
                    </a>
                </div>
            </div>
            <div class="col-7">
                    {{ form_start(registrationForm) }}
                        <div class="row">
                            <div class="col-5">
                                {{ form_row(registrationForm.nom, {label: 'Nom:'})  }}
                            </div>
                            <div class="col-5">
                                {{ form_row(registrationForm.prenom, {label: 'Prenom:'}) }}
                            </div> 
                            <div class="col-5">
                                {{ form_row(registrationForm.telephone, {label: 'Téléphone:'}) }}
                            </div>
                            <div class="col-5">
                                {{ form_row(registrationForm.email, {label: 'Email:'})  }}
                            </div>
                            <div class="col-5">
                                {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe:'}) }}
                            </div>
                                
                            <div class="btnformulaire">
                                <button type="submit" class="btn btnForm m-3">Suivant</button>
                            </div>
                        </div>
                       
                    {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
   
   
{% endblock %}
