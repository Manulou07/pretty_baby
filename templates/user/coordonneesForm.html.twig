{% extends 'base.html.twig' %}

{% block title %} - coordonnées{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <section class="container-fluid" id="reservation">
        <div class="row">
            <div class="col-12">
                <h2>COORDONNEES</h2>
            </div>
            <div class="col-5 p-5">
                <div>
                    <a href="{{ path('home') }}">
                    <img class="logocontact" src="{{ asset('logo/logo.png') }}" alt="logo du site">
                    </a>
                </div>
            </div>
            <div class="col-7">
                    {{ form_start(coordonneesForm) }}
                        <div class="row">
                            <div class="col-5">
                                {{ form_row(coordonneesForm.nom, {label: 'Nom:'})  }}
                            </div>
                            <div class="col-5">
                                {{ form_row(coordonneesForm.prenom, {label: 'Prenom:'}) }}
                            </div> 
                            <div class="col-5">
                                {{ form_row(coordonneesForm.telephone, {label: 'Téléphone:'}) }}
                            </div>
                            <div class="col-5">
                                {{ form_row(coordonneesForm.email, {label: 'Email:'})  }}
                            </div>
                            <div class="col-5">
                                {{ form_row(coordonneesForm.plainPassword, {label: 'Mot de passe:'}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="btnformulaire col-1 offset-5">
                                <a href="{{ path('coordonnee_index') }}" class="btn btnform">retour</a>
                            </div>
                            <div class="btnformulaire col-3">
                                <button class="btn btnoffres">Valider</button>
                            </div>
                        </div>
                        
                    {{ form_end(coordonneesForm) }}
            </div>
        </div>
    </section>
   
   
{% endblock %}
